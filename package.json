{
    "name": "parcel-node-express-mongo",
    "version": "1.0.0",
    "description": "A basic starter web app with parceljs, node, express and mongoose",
    "main": "index.js",
    "scripts": {
        "test": "jest test/request.test.js",
        "mocha": "./node_modules/.bin/mocha --require @babel/register --watch test/api.test.js",
        "start": "nodemon --exec babel-node app.js | bunyan -o short",
        "postinstall": "link-module-alias",
        "preinstall": "command -v link-module-alias && link-module-alias clean || true",
        "format": "prettier-standard './**/**/*.js'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/wednesday-solutions/parcel-node-express-mongo.git"
    },
    "keywords": [
        "parcel",
        "node",
        "express",
        "mongo",
        "mongoose",
        "mongodb",
        "node-express",
        "node-express-mongo"
    ],
    "author": "Wednesday Solutions",
    "license": "MIT",
    "engines": {
        "node": "14.17.x"
    },
    "bugs": {
        "url": "https://github.com/wednesday-solutions/parcel-node-express-mongo/issues"
    },
    "homepage": "https://github.com/wednesday-solutions/parcel-node-express-mongo#readme",
    "dependencies": {
        "body-parser": "^1.19.1",
        "bunyan": "^1.8.15",
        "core-js": "^3.20.2",
        "cors": "^2.8.5",
        "express": "^4.17.2",
        "helmet": "^5.0.1",
        "husky": "^7.0.4",
        "mongoose": "^6.1.5",
        "nodemon": "^2.0.15"
    },
    "devDependencies": {
        "@babel/cli": "^7.16.7",
        "@babel/core": "^7.16.7",
        "@babel/node": "^7.16.7",
        "@babel/preset-env": "^7.16.7",
        "@babel/eslint-parser": "^7.5.4",
        "babel-eslint": "^10.1.0",
        "chai": "^4.3.4",
        "eslint": "^8.6.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.4.7",
        "link-module-alias": "^1.2.0",
        "mocha": "^9.1.3",
        "mockgoose": "^8.0.4",
        "prettier": "^2.5.1",
        "prettier-standard": "^16.4.1",
        "supertest": "^6.1.6"
    },
    "precommit": "lint:staged",
    "lint-staged": {
        "*.js": [
            "npm run lint:eslint:fix",
            "git add --force",
            "jest --findRelatedTests $STAGED_FILES"
        ],
        "*.json": [
            "prettier --write",
            "git add --force"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "_moduleAliases": {
        "@utils": "./server/utils",
        "@database": "./server/database",
        "@middlewares": "./server/middlewares",
        "@server": "./server"
    }
}
